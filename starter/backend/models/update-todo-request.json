{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "todo",
  "type": "object",
  "properties": {
    "todoId": {
      "type": "string",
      "description": "The ID of the todo",
      "minLength": 1
    },
    "userId": {
      "type": "string",
      "description": "The ID of the user who created the todo",
      "minLength": 1
    },
    "done": {
      "type": "boolean",
      "description": "Whether the todo is completed or not",
      "default": false
    }
  },
  "required": ["todoId", "userId", "done"],
  "additionalProperties": false
}
